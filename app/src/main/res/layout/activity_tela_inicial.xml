<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    android:id="@+id/layoutTelaInicial"
    android:onClick="iniciarApp"
    android:clickable="true"
    android:gravity="center"
    tools:context="riomaissaude.felipe.com.br.riomaissaude.activities.TelaInicial">

    <TextView
        android:id="@+id/txtFraseApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:clickable="true"
        android:textColor="@android:color/white"
        android:text="O aplicativo Rio SaÃºde utiliza dados do DATA RIO. " />

    <TextView
        android:id="@+id/txtFrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_below="@+id/txtFraseApp"
        android:paddingTop="100dp"
        android:textSize="16dp"
        android:text="Clique aqui para continuar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cristo" />

</RelativeLayout>
